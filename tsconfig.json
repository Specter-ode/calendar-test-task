{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "ESNext",
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"strict": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["/*"],
			"@/components/*": ["components/*"],
			"@/types/*": ["types/*"],
			"@/store/*": ["store/*"],
			"@/utils/*": ["utils/*"],
			"@/icons/*": ["assets/icons/*"],
			"@/assets/*": ["assets/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "vite.config.ts", "src/types/custom.d.ts"]
}
